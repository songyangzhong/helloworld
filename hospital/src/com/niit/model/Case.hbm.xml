<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.niit.model.Case" table="t_case" schema="hospital">
        <id name="caseId" column="CaseId"/>
        <property name="patientId" column="PatientId"/>
        <property name="doctorId" column="DoctorId"/>
        <property name="condition" column="Condition"/>
        <property name="createTime" column="CreateTime"/>
        <many-to-one name="patientByPatientId" class="com.niit.model.Patient" insert="false" update="false">
            <column name="PatientId"/>
        </many-to-one>
        <many-to-one name="doctorByDoctorId" class="com.niit.model.Doctor" insert="false" update="false">
            <column name="DoctorId"/>
        </many-to-one>
    </class>
</hibernate-mapping>
<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.niit.model.Register" table="t_register" schema="hospital">
        <id name="registerId" column="RegisterId"/>
        <property name="patientId" column="PatientId"/>
        <property name="departmentId" column="DepartmentId"/>
        <property name="doctorId" column="DoctorId"/>
        <property name="createTime" column="CreateTime"/>
        <property name="state" column="State"/>
        <many-to-one name="patientByPatientId" class="com.niit.model.Patient" insert="false" update="false">
            <column name="PatientId"/>
        </many-to-one>
        <many-to-one name="departmentByDepartmentId" class="com.niit.model.Department" insert="false" update="false">
            <column name="DepartmentId"/>
        </many-to-one>
        <many-to-one name="doctorByDoctorId" class="com.niit.model.Doctor" insert="false" update="false">
            <column name="DoctorId"/>
        </many-to-one>
    </class>
</hibernate-mapping>